<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/scan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">
        <!--<ImageView-->
        <!--android:layout_width="30dp"-->
        <!--android:layout_height="30dp"-->
        <!--android:src="@drawable/back"-->
        <!--android:layout_marginTop="10dp"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/binggrea"
            android:text="QR 코드 생성/스캔"
            android:textColor="#000000"
            android:textSize="17dp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginTop="11dp"
            android:src="@drawable/simbol" />
    </LinearLayout>

    <Button
        android:id="@+id/make"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:background="@drawable/makeicon"
        android:fontFamily="@font/binggraebold"
        android:gravity="center"
        android:shadowColor="#808080"
        android:shadowDx="10.0"
        android:shadowDy="10.0"
        android:shadowRadius="10.0"
        android:text="QR 생성"
        android:textColor="@color/white"
        android:textSize="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.149" />

    <Button
        android:id="@+id/scan"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:background="@drawable/scanicon"
        android:fontFamily="@font/binggraebold"
        android:gravity="center"
        android:text="QR 스캔"
        android:shadowColor="#808080"
        android:shadowDx="10.0"
        android:shadowDy="10.0"
        android:shadowRadius="10.0"
        android:textColor="@color/white"
        android:textSize="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.987" />
</android.support.constraint.ConstraintLayout>