<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/scan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">
        <!--<ImageView-->
        <!--android:layout_width="30dp"-->
        <!--android:layout_height="30dp"-->
        <!--android:src="@drawable/back"-->
        <!--android:layout_marginTop="10dp"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/binggrea"
            android:text="QR 생성화면"
            android:textColor="#000000"
            android:textSize="17dp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginTop="11dp"
            android:src="@drawable/simbol" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="630dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/remake"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/binggraebold"
            android:gravity="center"
            android:shadowColor="#808080"
            android:shadowDx="10.0"
            android:shadowDy="10.0"
            android:shadowRadius="10.0"
            android:text="뒤로가기"
            android:textColor="@color/white"
            android:textSize="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

            <ToggleButton
                android:id="@+id/record_m"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom= "8dp"
                android:background="@drawable/recordicon"
                android:text="ToggleButton"
                android:textOff="녹음하기"
                android:textOn="녹음종료"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.333"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.876"
                android:fontFamily="@font/binggraebold"
                android:gravity="center"
                android:shadowColor="#808080"
                android:shadowDx="10.0"
                android:shadowDy="10.0"
                android:shadowRadius="10.0"
                android:textColor="@color/white"
                android:textSize="80dp"/>

            <!--<ToggleButton-->
                <!--android:id="@+id/play_m"-->
                <!--android:layout_width="399dp"-->
                <!--android:layout_height="657dp"-->
                <!--android:layout_marginStart="8dp"-->
                <!--android:layout_marginTop="8dp"-->
                <!--android:layout_marginEnd="8dp"-->
                <!--android:layout_marginBottom="8dp"-->
                <!--android:background="@color/colorPrimary"-->
                <!--android:text="ToggleButton"-->
                <!--android:textOff="재생하기"-->
                <!--android:textOn="재생중지"-->
                <!--android:textSize="100dp"-->
                <!--app:layout_constraintBottom_toBottomOf="parent"-->
                <!--app:layout_constraintEnd_toEndOf="parent"-->
                <!--app:layout_constraintHorizontal_bias="0.0"-->
                <!--app:layout_constraintStart_toStartOf="parent"-->
                <!--app:layout_constraintTop_toTopOf="parent"-->
                <!--app:layout_constraintVertical_bias="1.0" />-->

            <Button
                android:id="@+id/print"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="QR출력"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                android:background="@drawable/printicon"
                android:fontFamily="@font/binggraebold"
                android:gravity="center"
                android:shadowColor="#808080"
                android:shadowDx="10.0"
                android:shadowDy="10.0"
                android:shadowRadius="10.0"
                android:textColor="@color/white"
                android:textSize="80dp"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>